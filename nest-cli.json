{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/modules/common/mail/templates/**/*",
        "outDir": "dist/modules/common/mail/templates"
      },
      {
        "include": "src/modules/common/mail/images/**/*",
        "outDir": "dist/modules/common/mail/images"
      }
    ],
    "watchAssets": true
  }
}
