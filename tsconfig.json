{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@auth/*": [
        "./src/modules/auth/*"
      ],
      "@auth/decorators": [
        "./src/modules/auth/decorators"
      ],
      "@config": [
        "./src/config"
      ],
      "@config/module": [
        "./src/config"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@exceptions": [
        "./src/exceptions"
      ],
      "@middlewares": [
        "./src/middlewares"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  }
}
